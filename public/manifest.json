{
  "manifest_version": 3,
  "name": "Minha Extensão React",
  "version": "1.0",
  "description": "Extensão Chrome para WhatsApp Web",
  "content_scripts": [
    {
      "matches": [
        "*://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "asset-manifest.json",
        "static/css/*.css",
        "static/js/*.js"
      ],
      "matches": ["*://web.whatsapp.com/*"]
    }
  ],
  "icons": {
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://web.whatsapp.com/*",
    "*://whatsapp.com/*",
    "*://api.bpcruzeiros.com/*",
    "*://bpcruzeiros.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  }
}